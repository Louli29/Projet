def create_perso(depart): #depart couple (x depart, y depart)
    d={}
    d["char"]="o"
    d["x"]=depart[0]
    d["y"]=depart[1]
    return d #dictionnaire 

  

def update_p(letter,p,m):#p dico position personnage et m matrice map
    if letter=="d" :
        if p["y"]+1<=len(m) and m[p["x"]][p["y"]+1]==0:
            p["y"]+=1       
    if letter=="q":
        if m[p["x"]][p["y"]-1]==0:
            p["y"]-=1
    if letter=="z":
        if m[p["x"]-1][p["y"]]==0:
            p["x"]-=1
    if letter=="s" :
        if p["x"]+1<len(m[0]) and m[p["x"]+1][p["y"]]==0:
            p["x"]+=1
    if p["x"] <0:
        p["x"]=0
    if p["y"]<0:
        p["y"]=0
        
    return p

import random
def create_object (nb_objects,m):
    object=set()
    i=0
    while i < (nb_objects):
        x=random.randint(0,len(m))
        y=random.randint(0,len(m[0]))
        if m[x][y]!=1:
            object.add((x,y))
            i+=1
    return object # renvoie un ensemble de couple
            
    


def display_map_char_and_objects (m,d,p,letter,objects):# m matrice map, dico des murs, p dico position personnage, l le déplacement 
    L=[[None for a in range (len(m[0]))] for b in range(len(m))]
    for i in range (len(m)):
        for j in range (len(m[0])):
            for k in d:
                if m[i][j]==k:
                    L[i][j]=d[k]
                    
    for a in objects:
        L[a[0]][a[1]]="."

    p=update_p(letter,p,m)
    L[p["x"]][p["y"]]="o"
    return L


